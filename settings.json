{

    "workbench.colorTheme": "Atom One Dark",

    "editor.fontFamily": "'Consolas','宋体'",
    "debug.console.fontFamily":"'Consolas','宋体'",
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 14,

    "editor.fontLigatures":true, 

    "files.autoSave":  "afterDelay",
    "files.autoSaveDelay": 1000,

    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "fluent-icons",

    "window.commandCenter": true,
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility":"toggle",

    // gitlens
    "gitlens.defaultDateFormat": "YYYY-MM-DD hh:mm:ss",
    "gitlens.defaultDateShortFormat": "YYYY-MM-DD",

    // cpp reference 
    "cppref.lang": "zh",
    "cppref.searchEngine": "Google",

    // Doxygen Documentation Generator
    "doxdocgen.generic.authorName": "Tang Jiapeng",
    "doxdocgen.generic.authorEmail": "tangjiapeng0215@gmail.com",

    // C/C++
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    "C_Cpp.inlayHints.parameterNames.suppressWhenArgumentContainsName": false,
    "C_Cpp.inlayHints.parameterNames.hideLeadingUnderscores": true,
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "C_Cpp.inlayHints.referenceOperator.showSpace": false,
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.clang_format_style": "Google",

    // CMake
    "cmake.cmakePath": "/usr/bin/cmake",
    "cmake.buildDirectory": "${workspaceFolder}/out/${buildType}",
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.generator": "Unix Makefiles",
    
    // vim
    "vim.useSystemClipboard":true,
        
}
